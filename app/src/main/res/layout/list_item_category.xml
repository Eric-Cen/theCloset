<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_marginTop="8dp"
    >
    <ImageView
        android:id="@+id/iv_category_image"
        android:contentDescription="@string/category_image_description"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:paddingStart="@dimen/padding_8dp"
        android:paddingEnd="@dimen/padding_0dp">
        <TextView
            android:id="@+id/tv_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/cloth_title"
            tools:text="Category name"
            />
        <TextView
            android:id="@+id/tv_category_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Category item counts"
            android:textSize="@dimen/item_count"
            />

    </LinearLayout>

</LinearLayout>
